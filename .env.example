# SMTP config
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-user
SMTP_PASS=your-pass
SMTP_SECURE=false

# Email headers
DIGEST_FROM=Daily Digest <digest@example.com>
DIGEST_TO=you@example.com
DIGEST_SUBJECT=Daily Tech + Hiring Digest

# Behavior
LOOKBACK_HOURS=36
MAX_ITEMS_PER_SECTION=12
DRY_RUN=false

# Optional LLM summaries
OPENAI_API_KEY=
SUMMARIZE_ENABLED=false
SUMMARIZE_MODEL=gpt-4o-mini
SUMMARIZE_TOP=3
